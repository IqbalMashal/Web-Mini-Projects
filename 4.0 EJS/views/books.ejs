<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Books</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

    <!-- Navbar -->
    <nav class="bg-blue-600 p-4">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-white text-2xl font-bold">City Library</h1>
            <div class="space-x-4">
                <!-- Books Links -->
                <a href="/books" class="text-white hover:text-gray-200 transform hover:scale-110 transition duration-300">Books</a>
                <a href="/books/add" class="text-white hover:text-gray-200 transform hover:scale-110 transition duration-300">Add Book</a>
                <a href="/books/delete" class="text-white hover:text-gray-200 transform hover:scale-110 transition duration-300">Delete Book</a>
                
                <!-- Members Links -->
                <a href="/members" class="text-white hover:text-gray-200 transform hover:scale-110 transition duration-300">Members</a>
                <a href="/members/add" class="text-white hover:text-gray-200 transform hover:scale-110 transition duration-300">Add Member</a>
                <a href="/members/delete" class="text-white hover:text-gray-200 transform hover:scale-110 transition duration-300">Delete Member</a>
            </div>
        </div>
    </nav>



    <!-- Intro Image -->
    <div class="container mx-auto p-4">
        <img src="/photos/books.jpg" alt="Library Books" class="w-full h-96 object-cover rounded-lg shadow-lg mb-6">
    </div>


    <!-- Main Content -->
    <main class="container mx-auto p-4">
        <h2 class="text-3xl font-bold mb-6">Our Books Collection</h2>
        <div id="books-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% books.forEach(book => { %>
                <div class="bg-white p-6 rounded-lg shadow-md transform transition duration-300 hover:scale-105 hover:shadow-xl">
                    <h3 class="text-xl font-bold mb-2"><%= book.title %></h3>
                    <p class="text-gray-600">Author: <%= book.author %></p>
                    <p class="text-gray-600">ISBN: <%= book.isbn %></p>
                    <p class="text-gray-600">Category: <%= book.category %></p>
                </div>
            <% }) %>
        </div>
    </main>


    <!-- First Footer -->
    <footer class="bg-gray-800 text-white p-4 mt-8">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 <span class="text-blue-400">City Library</span>. All rights reserved.</p>
        </div>
    </footer>

    <!-- Second Footer -->
    <footer class="bg-blue-400 text-white p-4 mt-8"> 
        <div class="container mx-auto text-center">
            <p class="text-white-400">Website by Iqbal Mashal</p> 
            <p class="text-white-400">Last modified on <%= new Date().toLocaleDateString() %></p> 
        </div>
    </footer>


</body>
</html>
